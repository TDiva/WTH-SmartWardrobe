<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/apparel_details_photo"
                android:layout_width="150dp"
                android:layout_height="150dp" />


            <LinearLayout
                android:layout_toRightOf="@id/apparel_details_photo"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/apparel_details_name"
                    android:textColor="@color/black"
                    android:text="Название: "
                    android:textSize="19dp"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/apparel_details_material"
                    android:textColor="@color/black"
                    android:text="Материал: "
                    android:textSize="19dp"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/apparel_details_count_wash"
                    android:textColor="@color/black"
                    android:text="Раз одето: "
                    android:textSize="19dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
        <TextView
            android:paddingLeft="10dp"
            android:text="Описание:"
            android:textSize="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/apparel_details_description"/>

    </LinearLayout>

</RelativeLayout>