<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >

        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="#ffc06477" />
            <gradient android:angle="-90" android:startColor="#ffc05a76" android:endColor="#ffc0314c"  />
        </shape>
    </item>
    <item android:state_focused="true">

        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffc06477" />
            <solid android:color="#ffc03181"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >


            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffc03181" />
            <gradient android:angle="-90" android:startColor="#ffc0314c" android:endColor="#ffc06477" />
        </shape>
    </item>
</selector>